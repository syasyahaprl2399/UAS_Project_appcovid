<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    android:orientation="vertical"
    tools:context=".activity.NewsDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageDetailNews"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/marginVertiCard"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNewsTitleDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:text="JUDUL BESAR" />

            <TextView
                android:id="@+id/tvNewsSourceDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                tools:text="Source" />

            <TextView
                android:id="@+id/tvNewsAuthorDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                tools:text="Author" />

            <TextView
                android:id="@+id/tvNewsPublishedDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                tools:text="published date" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/marginVertiCard"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:text="@string/read_more"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvNewsContentDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:justificationMode="inter_word"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                tools:text="Content" />

            <TextView
                android:id="@+id/tvNewsDescDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                tools:text="Description" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>