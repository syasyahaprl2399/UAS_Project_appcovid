<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#03A9F4"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        style="@style/AppTheme.styleMarginAll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/colorPrimary"
        android:elevation="@dimen/cardElevation"
        app:cardCornerRadius="@dimen/cardRadius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/marginLisLinear"
            android:background="@color/colorPrimary"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/marginBottomBetweenTextList"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvProvConfirmed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_trending_up"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    tools:text="Confirmed" />

                <TextView
                    android:id="@+id/tvProvRecovered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_trending_down"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    tools:text="Recovered" />

                <TextView
                    android:id="@+id/tvProvDeath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_dead"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    tools:text="Death" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvProvProvince"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:text="Province" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>